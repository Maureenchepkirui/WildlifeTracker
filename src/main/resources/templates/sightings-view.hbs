{{#partial 'content'}}


        <h1>REPORTED SIGHTINGS</h1>


    {{#if sightings}}
        {{#each sightings }}
            <div class="sight" style="margin: 20px;">
                <p style="font-family:san Serif; padding:10px; font-size:18px;">{{location}}-{{rangerName}}
                    <span class="btn btn-warning" style="float: right;"><a style="color: white;" href="/animals/{{animalId}}/sightings/{{id}}">View Details</a></span>
                </p>
                <hr>
            </div>
        {{/each}}
    {{else}}
        <p>No SIGHTINGS REPORTED!!</p>
    {{/if}}
{{/partial}}

{{> layout.hbs}}