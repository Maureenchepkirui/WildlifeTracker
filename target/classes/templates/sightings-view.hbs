{{#partial 'content'}}


        <h1>REPORTED SIGHTINGS</h1>


    {{#if sightings}}
        {{#each sightings }}
            <div class="sighting">
                <p>{{location}}-{{rangerName}}
                    <span class="btn btn-warning" style="float: right;"><a href="/animals/{{animalId}}/sightings/{{id}}">View Details</a></span>
                </p>
                <hr>
            </div>
        {{/each}}
    {{else}}
        <p>No SIGHTINGS REPORTED!!</p>
    {{/if}}
{{/partial}}

{{> layout.hbs}}